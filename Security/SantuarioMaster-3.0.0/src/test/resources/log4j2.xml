<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info" name="Apache Santuario" packages="">
    <Appenders>
        <File name="LOG" fileName="target/logging.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="LOG"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>
